<UserControl x:Class="WpfLibrary.BookViewUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfLibrary"
             mc:Ignorable="d"
             d:DesignHeight="280" d:DesignWidth="220">
  <Grid>
    <StackPanel>


            <Image x:Name="picBook" Height="170"  Stretch="Fill" Width="160"  Visibility="Visible" >
        <Image.Effect>
          <DropShadowEffect/>
        </Image.Effect>
      </Image>
            <TextBlock Text="דג המשאלות" x:Name="myBookName" FontSize="27" FontWeight="Bold" TextAlignment="Center" Height="40"  Visibility="Visible"/>
            <TextBlock x:Name="digitalBookType" Text="ספר דיגיטלי" FontSize="27" FontWeight="Bold" TextAlignment="Center" Height="35" Foreground="#FFFF6D81" Visibility="Visible"/>
            <Button x:Name="btnDeatailsOfbook" Content="לחץ" FontSize="16" Width="46" Height="25" Click="Button_Click" Visibility="Visible"/>
        
        </StackPanel>

  </Grid>
</UserControl>
